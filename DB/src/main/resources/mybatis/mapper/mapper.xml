<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.db.dao.BoardMapper">
    <insert id="insert" parameterType="org.example.db.dto.BoardDTO">
        insert into board(id, writer, contents, regDate)
        values (seq_id.nextval, #{writer}, #{contents}, sysdate)
    </insert>

    <select id="select" resultType="org.example.db.dto.BoardDTO">
        select * from board where id = #{id}
    </select>

    <select id="listAll" resultType="org.example.db.dto.BoardDTO">
        select * from board order by id desc
    </select>

    <delete id="delete" parameterType="int">
        delete from board where id = #{id}
    </delete>
</mapper>